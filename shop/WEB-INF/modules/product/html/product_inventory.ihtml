     $q .= "ORDER BY product_name ";
     $list .= $q . " LIMIT $offset, " . SEARCH_ROWS;
     $count .= $q;   
  }
  $db->query($count);
  $db->next_record();
  $num_rows = $db->f("num_rows");
  if ($num_rows == 0) {
     echo "Vašemu dotazu neodpovídá žádný výsledek.<BR>";
  }
  else { ?>
    <table width="100%" border="0" cellspacing="0" cellpadding="5" class="RecordsTable">
